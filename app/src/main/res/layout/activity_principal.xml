<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPrincipal"
    android:background="@drawable/backgroundCARfuel"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Médias de Consumo de Veículo"
        android:paddingTop="80dp"
        android:textSize="15sp"
        android:maxLines="1"
        android:fontFamily="@font/archivo_black"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/consumo_percurso"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="@drawable/botao_arrendondado"
        android:text="Quanto Gasto para Percorrer ?"
        />
    <Button
        android:id="@+id/media_km"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@id/consumo_percurso"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="@drawable/botao_arrendondado"
        android:text="Quanto Gasto para Percorrer ?"
        />



</RelativeLayout>