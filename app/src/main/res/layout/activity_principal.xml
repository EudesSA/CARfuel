<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcarfuel"
    android:padding="15dp"
    tools:context=".TelaPrincipal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:maxLines="1"
        android:paddingTop="80dp"
        android:text="Médias de Consumo de Veículo"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_consumo_percurso"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/botao_arrendondado"
        android:fontFamily="casual"
        android:padding="12dp"
        android:text="Quanto Gasto para Percorrer ?"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_media_km"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/botao_arrendondado"
        android:fontFamily="casual"
        android:padding="12dp"
        android:text="Média KM por Litro ?"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_gasolinaOUalcool"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_below="@id/button_consumo_percurso"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/botao_arrendondado"
        android:fontFamily="casual"
        android:padding="12dp"
        android:text="Alcool ou Gasolina ?"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_quantidadeLitros"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_below="@id/button_media_km"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/botao_arrendondado"
        android:fontFamily="casual"
        android:padding="12dp"
        android:text="Quantidade de  Litros Abastecido ?"
        android:textSize="18sp" />

</RelativeLayout>