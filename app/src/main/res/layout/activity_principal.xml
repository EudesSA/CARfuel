<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPrincipal"
    android:background="@drawable/backgroundcarfuel"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Médias de Consumo de Veículo"
        android:paddingTop="80dp"
        android:textSize="15sp"
        android:maxLines="1"
        android:fontFamily="@font/archivo_black"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/consumo_percurso"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:textSize="18sp"
        android:padding="12dp"
        android:fontFamily="casual"
        android:background="@drawable/botao_arrendondado"
        android:text="Quanto Gasto para Percorrer ?"
        />
    <Button
        android:id="@+id/media_km"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@id/consumo_percurso"
        android:layout_marginLeft="50dp"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:padding="12dp"
        android:background="@drawable/botao_arrendondado"
        android:text="Média KM por Litro ?"
        />
    <Button
        android:id="@+id/gasolinaOUalcool"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:layout_below="@id/consumo_percurso"
        android:padding="12dp"
        android:fontFamily="casual"
        android:background="@drawable/botao_arrendondado"
        android:text="Alcool ou Gasolina ?"
        />
    <Button
        android:id="@+id/quantidadeLitros"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="18sp"
        android:layout_below="@id/media_km"
        android:layout_toRightOf="@id/gasolinaOUalcool"
        android:padding="12dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="casual"
        android:background="@drawable/botao_arrendondado"
        android:text="Quantidade de  Litros Abastecido ?"
        />



</RelativeLayout>